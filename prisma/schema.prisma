// STAR SCHEMA STRUCTURE:
// - Plan (dimension) -> n Locations/Destinations (dimension)
//   Each Location -> n Accommodations, n Activities, n Transports (dimensions)
// - Dimensions are denormalized (descriptive attributes only)
// - Measures (price, rating, duration) stored in dimension tables
// - Hierarchy: Plan (1) -> Location (n) -> Accommodation/Activity/Transport (n each)
//
// IMPORTANT: After running migrations, add the following partial unique indexes to enforce
// "one selected item per plan" constraints:
//
// CREATE UNIQUE INDEX location_one_selected_per_plan ON location (plan_id) WHERE is_selected = true;
// CREATE UNIQUE INDEX accommodation_one_selected_per_location ON accommodation (location_id) WHERE is_selected = true;
// CREATE UNIQUE INDEX transport_one_selected_per_location ON transport (location_id) WHERE is_selected = true;
// Note: Since only one Location can be selected per Plan, one per Location = one per Plan

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String       @id
  name          String
  email         String
  emailVerified Boolean      @default(false)
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  sessions      Session[]
  accounts      Account[]
  plans         Plan[]
  
  // Onboarding preferences
  preferences        Json?     // Travel preferences from onboarding
  preferenceSummary  String?   // AI-refined preference summary
  onboardingComplete Boolean   @default(false)
  
  // Future context data (Instagram, etc.)
  contextData      Json?      // Additional user context
  contextUpdatedAt DateTime?  // When context was last updated

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// DIMENSION: Plan - Top-level plan dimension
model Plan {
  id            String         @id @default(uuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  title         String
  description   String?
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  locations     Location[]
  
  // Generation status tracking to prevent duplicate requests
  generationStatus String       @default("idle") // "idle" | "generating_locations" | "generating_research" | "completed"
  locationTaskId   String?      // Manus task ID for location generation
  researchTaskId   String?      // Manus task ID for research
  lastGeneratedAt  DateTime?    // Timestamp of last generation

  @@index([userId])
  @@map("plan")
}

// DIMENSION: Location/Destination - Denormalized location attributes
model Location {
  id            String         @id @default(uuid())
  planId        String
  plan          Plan           @relation(fields: [planId], references: [id], onDelete: Cascade)
  name          String
  city          String?
  country       String
  latitude      Float?
  longitude     Float?
  description   String?
  reason        String?        // Why the model chose this location
  imageUrl      String
  isSelected    Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accommodations Accommodation[]
  activities    Activity[]
  transports    Transport[]

  @@index([planId])
  @@index([planId, isSelected])
  @@map("location")
}

// DIMENSION: Accommodation - Denormalized accommodation attributes
model Accommodation {
  id          String   @id @default(uuid())
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  name        String
  type        String?  // e.g., "hotel", "airbnb", "hostel"
  address     String?
  url         String?
  price       Float?   // Measure: cost
  rating      Float?   // Measure: rating score
  description String?
  checkIn     DateTime?
  checkOut    DateTime?
  reason      String?  // Why the model chose this accommodation
  imageUrl    String
  isSelected  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([locationId])
  @@index([locationId, isSelected])
  @@map("accommodation")
}

// DIMENSION: Activity - Denormalized activity attributes
model Activity {
  id          String   @id @default(uuid())
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  name        String
  type        String?  // e.g., "attraction", "restaurant", "tour"
  address     String?
  url         String?
  price       Float?   // Measure: cost
  rating      Float?   // Measure: rating score
  description String?
  reason      String   // reason why the activity was suggested for the user 
  duration    Int?     // Measure: duration in minutes
  imageUrl    String
  isSelected  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([locationId])
  @@index([locationId, isSelected])
  @@map("activity")
}

// DIMENSION: Transport - Denormalized transport attributes
model Transport {
  id          String   @id @default(uuid())
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  type        String   // e.g., "flight", "train", "bus", "car_rental"
  name        String?
  from        String?
  to          String?
  url         String?
  price       Float?   // Measure: cost
  departure   DateTime?
  arrival     DateTime?
  description String?
  reason      String?  // Why the model chose this transport
  isSelected  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([locationId])
  @@index([locationId, isSelected])
  @@map("transport")
}
